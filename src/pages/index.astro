---
import Layout from '../layouts/Layout.astro';
import Banner from '../components/Banner.astro';
import Nav from '../components/Nav.astro';
import About from '../components/About.astro';
import Gallery from '../components/Gallery.astro';
import Register from '../components/Register.astro';
---
<link
rel="stylesheet"
href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"
/>
<Layout title="Magaly & Rene">
	<main>
		<div class="relative w-full">
			<Nav/>
			<Banner/>
		</div>
		<About/>
		<Gallery/>
		<Register/>
	</main>
</Layout>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900&family=Gupter:wght@400;500;700&display=swap');

	.gupter{
		font-family: "Gupter", serif !important;
		text-transform: uppercase;
		letter-spacing: 5px;
		font-weight: 400;
	}

	.sans{
		font-family: "Fira Sans", sans-serif !important;
		letter-spacing: 3px;
		text-transform: uppercase;
		font-weight: 400;
	}

	@keyframes scale-a-lil {
  		from {
   		 scale: .5;
  		}
	}		
  
@media (prefers-reduced-motion: no-preference) {
   .component{
    animation: scale-a-lil linear both;
    animation-timeline: view();
    animation-range: 20vh 60vh;
  }
}

</style>


